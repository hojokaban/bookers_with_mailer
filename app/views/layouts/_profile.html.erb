<!-- recieves user -->

<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "noimages.png", size:'100x100' %>
	<table class="table">
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
		<tr>
			<th>Address</th>
			<th id="address"><%= user.address %></th>
		</tr>
		<tr>
			<th>follows</th>
			<th><%= link_to user.following.count, following_user_path(user) %></th>
		</tr>
		<tr>
			<th>followers</th>
			<th><%= link_to user.followers.count, followers_user_path(user) %></th>
		</tr>
	</table>
