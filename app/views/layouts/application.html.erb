<!DOCTYPE html>
<html>
<head>
  <title>Bookers</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'%>

  <script src="https://kit.fontawesome.com/df5d430224.js" crossorigin="anonymous"></script>
</head>

<body>

<%= render 'layouts/header' %>

<div class="container body">

  <div class="search_form text-center">
    <%= render 'layouts/search_form' %>
  </div>

  <div class="flash">
    <% if flash[:notice] %><%= flash[:notice] %><% end %>
  </div>

  <%= yield %>

</div>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GMAP_APIKEY'] %>&callback=initMap" async defer></script>


  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>

  </footer>

  <%= debug(params) if Rails.env.development? %>

</body>
</html>
