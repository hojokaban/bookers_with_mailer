<div class="container">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, id:"postal_code" %>
  </div>

  <div class="field">
    <%= f.label :prefecture %><br />
    <%= f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, id:"user_prefecture" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, placeholder:"市", id:"city" %>
  </div>

  <div class="field">
    <%= f.label :street %><br />
    <%= f.text_field :street, placeholder:"町、通り等", id:"street" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions submit-btn">
    <%= f.submit "Sign up", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
